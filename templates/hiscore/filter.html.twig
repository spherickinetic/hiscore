{% extends "base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12">
            <h1 class="text-6xl pt-12 pb-8">
                High scores
            </h1>
            {% if hiscores|length > 0 %}
                <table class="border-collapse table-auto w-full text-sm">
                <thead>
                    <tr class="border-b dark:border-slate-600 font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-centre">
                    <th>Position</th>
                    <th>Name</th>
                    <th>Difficulty</th>
                    <th>Score</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-slate-800">
                    {% for hiscore in hiscores %}
                        {% if loop.index % 2 == 0 %}
                            <tr class="bg-gray-100">
                        {% else %}
                            <tr>
                        {% endif %}
                            <td>{{ loop.index }}</td>
                            <td>{{ hiscore.user.nameFirst ~ ' ' ~ hiscore.user.nameLast }}</td>
                            <td>{{ hiscore.difficulty.title }}</td>
                            <td>{{ hiscore.score }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
                </table>
            {% else %}
                There are no high scores to show!
            {% endif %}
        </div>
    </div>
{% endblock %}